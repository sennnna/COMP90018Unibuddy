<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".finder.fragment.FinderProfileFragment">
    //返回
    <ImageButton
        android:id="@+id/finder_profile_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:background="@color/white"
        android:src="@drawable/ic_back" />
    //头像
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="20dp"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        >
        <ImageView
            android:id="@+id/finder_profile_photo"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/photo">
        </ImageView>
        //姓名性别距离
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="240dp"
        android:layout_marginLeft="180dp"
        >
        <TextView
            android:id="@+id/finder_profile_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lisa"
            android:textSize="30dp"
            >
        </TextView>
        <ImageView
            android:id="@+id/finder_profile_gender"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/woman">
        </ImageView>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp">
            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginLeft="5dp"
                android:src="@drawable/ic_finder_location">
            </ImageView>
            <TextView
                android:id="@+id/finder_profile_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="500m"></TextView>
        </LinearLayout>
    </LinearLayout>
    //座右铭
    <TextView
        android:id="@+id/finder_profile_motto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Life is short, break the rules."
        android:layout_centerHorizontal="true"
        android:layout_marginTop="300dp"></TextView>
    //个人信息
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="350dp"
        android:layout_marginLeft="80dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="20dp"
                android:text="university: "
                android:textStyle="bold"></TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="20dp"
                android:text="faculty: "
                android:textStyle="bold"></TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="20dp"
                android:text="major: "
                android:textStyle="bold"></TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="20dp"
                android:text="status: "
                android:textStyle="bold"></TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="20dp"
            >
            <TextView
                android:id="@+id/finder_profile_university"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="20dp"
                android:text="the University of Melbourne"></TextView>
            <TextView
                android:id="@+id/finder_profile_faculty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="20dp"
                android:text="Science"></TextView>
            <TextView
                android:id="@+id/finder_profile_major"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="20dp"
                android:text="Data Science"></TextView>
            <TextView
                android:id="@+id/finder_profile_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="20dp"
                android:text="single"></TextView>
        </LinearLayout>

    </LinearLayout>
    //加好友
    <Button
        android:id="@+id/finder_profile_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="560dp"
        android:text="add"></Button>
</RelativeLayout>