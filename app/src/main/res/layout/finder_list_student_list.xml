<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/finder_list_content_details"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_marginLeft="15dp"
    android:orientation="horizontal">
    //头像
    <ImageView
        android:id="@+id/finder_list_content_photo"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="10dp" />
    //姓名、性别
    <LinearLayout
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="12dp"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/finder_list_content_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="15dp"/>
        <ImageView
            android:id="@+id/finder_list_content_gender"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="10dp" />
    </LinearLayout>
    //学校，情感状况
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/finder_list_content_university"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:autoSizeTextType="uniform"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="40dp">
            <ImageView
                android:id="@+id/finder_list_content_status_icon"
                android:layout_width="20dp"
                android:layout_height="20dp" />
            <TextView
                android:id="@+id/finder_list_content_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textColor="@color/green"/>
        </LinearLayout>
    </LinearLayout>
    //距离
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginTop="20dp"
        android:layout_marginRight="5dp"
        android:orientation="vertical">
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="4dp"
            android:layout_gravity="end"
            android:src="@drawable/ic_finder_location"/>
        <TextView
            android:id="@+id/finder_list_content_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="5dp"
        />
    </LinearLayout>


</LinearLayout>