<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/center_view"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_centerInParent="true"/>

    <TextView
        android:id="@+id/school_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_alignTop="@id/search_school_edit"
        android:layout_alignBottom="@id/search_school_edit"
        android:gravity="center"
        android:text="School : "/>

    <EditText
        android:id="@+id/search_school_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/center_view"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/search_edit_style"
        android:layout_toRightOf="@id/school_tv" />

    <NumberPicker
        android:id="@+id/school_picker"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/center_view"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/tips_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/center_view"
        android:layout_marginTop="20dp"
        android:visibility="gone"
        android:text="The school was not found"/>


</RelativeLayout>