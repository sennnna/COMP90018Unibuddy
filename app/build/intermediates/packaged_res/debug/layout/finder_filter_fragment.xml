<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".finder.fragment.FinderFilterFragment">

    <ImageButton
        android:id="@+id/finder_filter_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:background="@color/white"
        android:src="@drawable/ic_back" />
    <TextView
        android:id="@+id/finder_filter_Filter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textSize="30dp"
        android:textStyle="bold"
        android:text="Filter"
        />

<!--    <TextView-->
<!--        android:id="@+id/finder_filter_save"-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:layout_marginLeft="320dp"-->
<!--        android:layout_marginTop="17dp"-->
<!--        android:text="Save"-->
<!--        android:textSize="20dp" />-->

    <View
        android:id="@+id/finder_filter_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="60dp"
        android:background="?android:attr/listDivider" />

    <TextView
        android:id="@+id/finder_filter_Gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="100dp"
        android:text="Gender"
        android:textSize="20dp"
        />

    <RadioGroup
        android:id="@+id/finder_filter_chooseGender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="130dp"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true">
        <RadioButton
            android:id="@+id/finder_filter_BoyButtonId"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="male"/>

        <RadioButton
            android:id="@+id/finder_filter_GirlButtonId"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="female" />

    </RadioGroup>


    <TextView
        android:id="@+id/finder_filter_Status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="200dp"
        android:text="Status"
        android:textSize="20dp"
        />

    <RadioGroup
        android:id="@+id/finder_filter_chooseStates"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="230dp"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true">
        <RadioButton
            android:id="@+id/finder_filter_SingleButtonId"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="single"/>

        <RadioButton
            android:id="@+id/finder_filter_DatingButtonId"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="Dating" />

        <RadioButton
            android:id="@+id/finder_filter_SecretButtonId"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Secret" />
    </RadioGroup>

    <TextView
        android:id="@+id/finder_filter_Age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="300dp"
        android:text="Age"
        android:textSize="20dp"
        />

    <Spinner
        android:id="@+id/finder_filter_Spinner_age"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="330dp"
        android:entries="@array/Age"
        android:spinnerMode="dialog"
        android:text="Choose Age"
        ></Spinner>

    <TextView
        android:id="@+id/finder_filter_university_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="400dp"
        android:text="University"
        android:textSize="20dp"
        />

    <Spinner
        android:id="@+id/finder_filter_Spinner_university"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="430dp"
        android:entries="@array/university"
        android:spinnerMode="dialog"
        android:text="Choose University"
        ></Spinner>

    <TextView
        android:id="@+id/finder_filter_distance_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="500dp"
        android:text="Distance"
        android:textSize="20dp"
        />

    <Spinner
        android:id="@+id/finder_filter_Spinner_distance"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="530dp"
        android:entries="@array/distance"
        android:spinnerMode="dialog"
        android:text="Choose University"
        ></Spinner>



</RelativeLayout>