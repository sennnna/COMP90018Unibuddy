<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/finder_list_content_details"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">
        //校徽
        <ImageView
            android:id="@+id/img_university"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/melbourne"/>

        //学校，情感状况
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="20dp"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/finder_list_content_university"

                android:layout_width="210dp"
                android:layout_height="wrap_content"
                android:autoSizeTextType="uniform"
                android:text=""
                android:textSize="20dp"/>

        </LinearLayout>
        //距离
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:src="@drawable/ic_finder_location"
                android:gravity="center"/>
            <TextView
                android:id="@+id/campus_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="5km"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>